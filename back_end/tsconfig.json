{
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    "lib": ["es6"],
    "allowJs": true,
    "outDir": "build",
    "rootDir": "src",
    "strict": true,
    "noImplicitAny": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "types": ["@types/jest", "jest"]
  },
  // "include": ["src"]
  "exclude": [
    "__tests__/",
    "jest.config.js",
    "prettier.config.js",
    "tsconfig.json"
  ]
}
